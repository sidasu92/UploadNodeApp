<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> 
  
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
</head>

<body>
    <h1 style="margin-left: 35px;">File :: <%= file.filename %></h1>
    <form>
      <table class="table table-striped table-inverse">
        <thead class="thead-inverse">
          <tr>
            <th></th>
            <th>Size</th>
            <th>MD5 checksum of file</th>
            <th>Upload at</th>
            <th><i class="fa fa-download"></i>Download</th>
            <th>Share This file with: </th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <th scope="row"></th>
              <td><%= file.length %></td>
              <td><%= file.md5 %></td>
              <td><%= file.uploadDate %></td>
              <td><a href="/files/<%= file.filename %>" target="_blank">Download me!!</a></td>
              <td><input id="myInput" type="text" name="username"><a href="/share/<%= file.filename %>" id="shareLink">Share</a></td>
            </tr>
        </tbody>
      </table>
    </form>
    <button class="btn btn-info" style="margin-left: 35px;" onclick="window.location='/logout';">
      Logout
    </button>
    <button class="btn btn-info" style="margin-left: 35px;" onclick="window.location='/allFiles';">
      Take me to All Files
    </button>
</body>
<script type="text/javascript">
  $(function() {
    $("#shareLink").click(function() {
      window.location = $(this).attr('href') + '?userName=' + $('#myInput').val();
      return false;
    });
  })
</script>
</html>